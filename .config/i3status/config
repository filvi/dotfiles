general {
  output_format = "i3bar"
  colors = true
  color_good = "#00FF00"
  color_degraded = "#FFFF00"
  color_bad = "#FF0000"
}

order += "volume master"
order += "battery 0"
order += "disk /"
order += "tztime local"

volume master {
	format_muted = "Muted"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	format = "Vol:%volume"
}


disk "/" {
	format = "Free: %avail" 
}

battery 0 {
        format = "%status %percentage :: Remaning time %remaining"
        format_down = "No battery"
        status_chr = "Charging"
        status_bat = "Battery"
        status_unk = "Unknown"
        status_full = "Full"
        path = "/sys/class/:wpower_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
	format = "%d-%h @ %H:%M"
}
